    "autoload-dev": {
        "psr-4": {
            "Profesia\\Psr\\Middleware\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "XDEBUG_MODE=coverage ./vendor/bin/phpunit",
        "analyse": "./vendor/bin/phpstan analyse"
    },
